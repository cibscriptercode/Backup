<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrincipal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="17dp">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/btn_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_meta"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/btn_diccionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_diccionario"
            android:layout_marginRight="40dp"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/btn_ayuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_ayuda"
            android:layout_marginRight="40dp"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/btn_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cuenta"
            android:padding="5dp"/>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>